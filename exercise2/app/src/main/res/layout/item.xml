<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    card_view:cardUseCompatPadding="true"
                                    android:layout_margin="4dip">
    <LinearLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/mLL">

        <TextView
                android:gravity="center"
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_marginleft_10dp"
                android:layout_marginStart="@dimen/item_marginleft_10dp"
                android:textSize="@dimen/tv_item_14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:text="hello there"/>

        <TextView
                android:gravity="center"
                android:id="@+id/tvContent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginleft_15dp"
                android:layout_marginStart="@dimen/marginleft_15dp"
                android:maxLines="3"
                android:textSize="@dimen/tv_item_12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvName"
                tools:text="This is content "/>


    </LinearLayout>
</androidx.cardview.widget.CardView>